    <b:include data='blog' name='all-head-content'/>
    <title><data:blog.pageTitle/></title>
    
    <b:skin><![CDATA[
    /* Design System - All colors in HSL */
    :root {
      --background: 0 0% 98%;
      --foreground: 220 15% 15%;
      --card: 0 0% 100%;
      --card-foreground: 220 15% 15%;
      --primary: 215 85% 25%;
      --primary-foreground: 0 0% 100%;
      --secondary: 210 20% 93%;
      --secondary-foreground: 220 15% 15%;
      --muted: 210 20% 96%;
      --muted-foreground: 220 10% 45%;
      --accent: 0 85% 55%;
      --accent-foreground: 0 0% 100%;
      --border: 220 15% 88%;
      --destructive: 0 85% 55%;
      --destructive-foreground: 0 0% 100%;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Noto Sans Bengali', 'Segoe UI', Tahoma, sans-serif;
      background: hsl(var(--background));
      color: hsl(var(--foreground));
      line-height: 1.6;
    }
    
    /* Date Bar */
    .date-bar {
      background: hsl(var(--muted));
      padding: 0.5rem 0;
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
    }
    
    .date-bar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    /* Header Styles */
    .header {
      background: hsl(var(--primary));
      color: hsl(var(--primary-foreground));
      padding: 1.5rem 0;
      border-bottom: 3px solid hsl(var(--accent));
    }
    
    .header-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      text-align: center;
    }
    
    .site-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: hsl(var(--primary-foreground));
      text-decoration: none;
      display: block;
      margin-bottom: 0.5rem;
    }
    
    .site-tagline {
      font-size: 0.875rem;
      opacity: 0.9;
    }
    
    /* Navigation Menu */
    .nav-menu-section {
      background: hsl(var(--primary));
      border-bottom: 1px solid hsl(var(--accent));
    }
    
    .nav-menu {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: center;
      gap: 2rem;
      list-style: none;
      padding: 1rem;
    }
    
    .nav-menu a {
      color: hsl(var(--primary-foreground));
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
    }
    
    .nav-menu a:hover {
      background: hsl(var(--accent));
      color: hsl(var(--accent-foreground));
    }
    
    /* Breaking News Ticker */
    .breaking-news {
      background: hsl(var(--destructive));
      color: hsl(var(--destructive-foreground));
      padding: 0.75rem 0;
      overflow: hidden;
    }
    
    .breaking-news-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .breaking-news-badge {
      font-weight: 700;
      background: hsl(var(--background));
      color: hsl(var(--destructive));
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      white-space: nowrap;
      flex-shrink: 0;
    }
    
    .breaking-news-content {
      display: flex;
      gap: 2rem;
      animation: scroll 30s linear infinite;
      white-space: nowrap;
    }
    
    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    
    .breaking-news-item {
      display: inline-block;
      margin-right: 2rem;
    }
    
    /* Main Container */
    .main-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
      display: grid;
      grid-template-columns: 1fr 350px;
      gap: 2rem;
    }
    
    /* Hero Section */
    .hero-section {
      background: hsl(var(--card));
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .hero-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: hsl(var(--primary));
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 3px solid hsl(var(--accent));
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 1.5rem;
    }
    
    /* Hero Slider */
    .hero-slider {
      position: relative;
      overflow: hidden;
      border-radius: 0.5rem;
    }
    
    .hero-slider img {
      width: 100%;
      height: auto;
      min-height: 400px;
      object-fit: cover;
      display: block;
    }
    
    .hero-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
      padding: 1.5rem;
      color: white;
    }
    
    .hero-overlay h2 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    /* Top Stories */
    .top-stories {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .top-story-item {
      display: flex;
      gap: 1rem;
      padding: 0.75rem;
      background: hsl(var(--muted));
      border-radius: 0.5rem;
      transition: all 0.3s;
    }
    
    .top-story-item:hover {
      background: hsl(var(--secondary));
      transform: translateX(5px);
    }
    
    .top-story-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 0.5rem;
      flex-shrink: 0;
    }
    
    .top-story-content h3 {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: hsl(var(--foreground));
    }
    
    .top-story-content h3 a {
      color: hsl(var(--foreground));
      text-decoration: none;
    }
    
    .top-story-content h3 a:hover {
      color: hsl(var(--primary));
    }
    
    .top-story-time {
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
    }
    
    /* Category Section */
    .category-section {
      background: hsl(var(--card));
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .category-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: hsl(var(--primary));
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid hsl(var(--accent));
    }
    
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }
    
    .post-card {
      background: hsl(var(--card));
      border: 1px solid hsl(var(--border));
      border-radius: 0.5rem;
      overflow: hidden;
      transition: all 0.3s;
    }
    
    .post-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }
    
    .post-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    
    .post-card-content {
      padding: 1rem;
    }
    
    .post-card-title {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: hsl(var(--foreground));
    }
    
    .post-card-title a {
      color: hsl(var(--foreground));
      text-decoration: none;
    }
    
    .post-card-title a:hover {
      color: hsl(var(--primary));
    }
    
    .post-card-time {
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
    }
    
    /* Sidebar */
    .sidebar {
      position: sticky;
      top: 2rem;
      height: fit-content;
    }
    
    .sidebar-widget {
      background: hsl(var(--card));
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .sidebar-widget-title {
      font-size: 1.125rem;
      font-weight: 700;
      color: hsl(var(--primary));
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid hsl(var(--accent));
    }
    
    /* Tabs */
    .tabs-container {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1rem;
      border-bottom: 1px solid hsl(var(--border));
    }
    
    .tab-button {
      padding: 0.5rem 1rem;
      border: none;
      background: none;
      cursor: pointer;
      font-weight: 600;
      color: hsl(var(--muted-foreground));
      border-bottom: 2px solid transparent;
      transition: all 0.3s;
    }
    
    .tab-button:hover {
      color: hsl(var(--primary));
    }
    
    .tab-button.active {
      color: hsl(var(--primary));
      border-bottom-color: hsl(var(--accent));
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    /* Prayer Times Widget */
    .prayer-times {
      background: linear-gradient(135deg, hsl(215 85% 25%), hsl(220 85% 35%));
      color: hsl(var(--primary-foreground));
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .prayer-times .sidebar-widget-title {
      color: white;
      border-color: rgba(255,255,255,0.3);
    }
    
    .prayer-time-item {
      display: flex;
      justify-content: space-between;
      padding: 0.75rem;
      margin: 0.5rem 0;
      background: rgba(255,255,255,0.1);
      border-radius: 0.5rem;
      backdrop-filter: blur(10px);
    }
    
    .prayer-time-name {
      font-weight: 600;
    }
    
    .prayer-time-value {
      font-weight: 700;
      font-size: 1.125rem;
    }
    
    /* Weather Widget */
    .weather-widget {
      background: linear-gradient(135deg, hsl(0 85% 55%), hsl(220 85% 55%));
      color: white;
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }
    
    .weather-widget h3 {
      color: white;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    
    .weather-temp {
      font-size: 3rem;
      font-weight: 700;
      margin: 1rem 0;
    }
    
    .weather-location {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    /* Trending Posts */
    .trending-list {
      list-style: none;
    }
    
    .trending-item {
      padding: 1rem;
      border-bottom: 1px solid hsl(var(--border));
      transition: all 0.3s;
    }
    
    .trending-item:hover {
      background: hsl(var(--muted));
    }
    
    .trending-item:last-child {
      border-bottom: none;
    }
    
    .trending-number {
      display: inline-block;
      width: 30px;
      height: 30px;
      background: hsl(var(--accent));
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 30px;
      font-weight: 700;
      margin-right: 0.5rem;
    }
    
    .trending-title {
      font-size: 0.9375rem;
      font-weight: 600;
      color: hsl(var(--foreground));
    }
    
    .trending-title a {
      color: hsl(var(--foreground));
      text-decoration: none;
    }
    
    .trending-title a:hover {
      color: hsl(var(--primary));
    }
    
    .trending-views {
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
      margin-top: 0.25rem;
      display: block;
    }
    
    /* Footer */
    .footer {
      background: hsl(220 15% 15%);
      color: hsl(220 10% 75%);
      padding: 2rem 0 1rem;
      margin-top: 3rem;
    }
    
    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      text-align: center;
    }
    
    .footer-copyright {
      font-size: 0.875rem;
      padding: 1rem 0;
      border-top: 1px solid rgba(255,255,255,0.1);
      margin-top: 1rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .main-container {
        grid-template-columns: 1fr;
      }
      
      .hero-grid {
        grid-template-columns: 1fr;
      }
      
      .nav-menu {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .posts-grid {
        grid-template-columns: 1fr;
      }
      
      .sidebar {
        position: static;
      }
    }
    ]]></b:skin>
    
